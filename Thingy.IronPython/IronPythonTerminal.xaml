<UserControl
    x:Class="Thingy.IronPython.IronPythonTerminal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:localcontrols="clr-namespace:Thingy.IronPython.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Trigonometry" />
        </Menu>
        <localcontrols:Terminal
            Grid.Row="1"
            FontFamily="Consolas"
            FontSize="14" />
    </Grid>
</UserControl>
