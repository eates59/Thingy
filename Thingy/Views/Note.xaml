<UserControl
    x:Class="Thingy.Views.Note"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Thingy.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:htmlrenderer="clr-namespace:TheArtOfDev.HtmlRenderer.WPF;assembly=HtmlRenderer.WPF"
    d:DesignHeight="300"
    d:DesignWidth="900"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox
            Grid.Column="0">
            
        </ListBox>
        <TabControl
            Grid.Column="1"
            TabStripPlacement="Bottom">
            <TabItem Header="Edit">
                <TextBox
                    FontSize="14"
                    FontFamily="Consolas"
                    AcceptsReturn="True"
                    AcceptsTab="True"
                    Text="{Binding MarkDownText}"/>
            </TabItem>
            <TabItem Header="Preview">
                <htmlrenderer:HtmlPanel Text="{Binding RenderedText}"/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
