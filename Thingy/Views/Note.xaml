<UserControl
    x:Class="Thingy.Views.Note"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Thingy.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="900"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style
            x:Key="ToolbarButton"
            TargetType="Button">
            <Setter Property="Height" Value="30" />
            <Setter Property="Margin" Value="2.5,0" />
            <Setter Property="Width" Value="30" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ToolBar>
            <Button
                Command="{x:Static ApplicationCommands.Copy}"
                Style="{StaticResource ToolbarButton}">
                <Image Source="pack://application:,,,/Thingy.Images;component/Icons/icons8-copy-to-clipboard-96.png" />
            </Button>
            <Button
                Command="{x:Static ApplicationCommands.Cut}"
                Style="{StaticResource ToolbarButton}">
                <Image Source="pack://application:,,,/Thingy.Images;component/Icons/icons8-cut-96.png" />
            </Button>
            <Button
                Command="{x:Static ApplicationCommands.Paste}"
                Style="{StaticResource ToolbarButton}">
                <Image Source="pack://application:,,,/Thingy.Images;component/Icons/icons8-paste-96.png" />
            </Button>
            <Separator Margin="5,0" />
            <Button
                Command="{x:Static EditingCommands.AlignLeft}"
                CommandTarget="{Binding ElementName=RichTextBox}"
                Style="{StaticResource ToolbarButton}">
                <Image Source="pack://application:,,,/Thingy.Images;component/Icons/icons8-align-left-96.png" />
            </Button>
            <Button
                Command="{x:Static EditingCommands.AlignCenter}"
                CommandTarget="{Binding ElementName=RichTextBox}"
                Style="{StaticResource ToolbarButton}">
                <Image Source="pack://application:,,,/Thingy.Images;component/Icons/icons8-align-center-96.png" />
            </Button>
            <Button
                Command="{x:Static EditingCommands.AlignRight}"
                CommandTarget="{Binding ElementName=RichTextBox}"
                Style="{StaticResource ToolbarButton}">
                <Image Source="pack://application:,,,/Thingy.Images;component/Icons/icons8-align-left-96.png" />
            </Button>
            <Button
                Command="{x:Static EditingCommands.AlignJustify}"
                CommandTarget="{Binding ElementName=RichTextBox}"
                Style="{StaticResource ToolbarButton}">
                <Image Source="pack://application:,,,/Thingy.Images;component/Icons/icons8-align-justify-96.png" />
            </Button>
            <Separator Margin="5,0" />
            <Button
                Command="{x:Static EditingCommands.ToggleBold}"
                CommandTarget="{Binding ElementName=RichTextBox}"
                Style="{StaticResource ToolbarButton}">
                <Image Source="pack://application:,,,/Thingy.Images;component/Icons/icons8-bold-96.png" />
            </Button>
            <Button
                Command="{x:Static EditingCommands.ToggleItalic}"
                CommandTarget="{Binding ElementName=RichTextBox}"
                Style="{StaticResource ToolbarButton}">
                <Image Source="pack://application:,,,/Thingy.Images;component/Icons/icons8-italic-96.png" />
            </Button>
            <Button
                Command="{x:Static EditingCommands.ToggleUnderline}"
                CommandTarget="{Binding ElementName=RichTextBox}"
                Style="{StaticResource ToolbarButton}">
                <Image Source="pack://application:,,,/Thingy.Images;component/Icons/icons8-underline-96.png" />
            </Button>
            <Separator Margin="5,0" />
            <ComboBox
                MinWidth="120"
                ItemsSource="{x:Static Fonts.SystemFontFamilies}"
                SelectedIndex="0">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock
                            Margin="0,5"
                            FontFamily="{Binding}"
                            Text="{Binding}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <ComboBox
                MinWidth="40"
                ItemsSource="{Binding FontSizes}" />
        </ToolBar>
        <RichTextBox
            x:Name="RichTextBox"
            Grid.Row="1" />
    </Grid>
</UserControl>
