<UserControl
    x:Class="Thingy.Views.Note"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:applib="http://github.com/webmaster442/AppLib/WPF"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:htmlrenderer="clr-namespace:TheArtOfDev.HtmlRenderer.WPF;assembly=HtmlRenderer.WPF"
    xmlns:local="clr-namespace:Thingy.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:Thingy.Properties"
    d:DesignHeight="300"
    d:DesignWidth="900"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="200" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ListBox
            Grid.Column="0" />
        <TabControl
            Grid.Column="1"
            TabStripPlacement="Bottom">
            <TabItem
                Header="Edit">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <StackPanel
                        Grid.Row="0"
                        Orientation="Horizontal">
                        <TextBlock
                            Margin="3"
                            Text="Font size:" />
                        <applib:EditableSlider
                            x:Name="FontSizeSelector"
                            Height="20"
                            Margin="3"
                            DefaultValue="14"
                            DisplayFormat="0"
                            Maximum="32"
                            Minimum="8"
                            Value="{Binding Source={x:Static properties:Settings.Default}, Path=NoteFontSize, Mode=TwoWay}" />
                    </StackPanel>
                    <TextBox
                        Grid.Row="1"
                        AcceptsReturn="True"
                        AcceptsTab="True"
                        FontFamily="{StaticResource UbuntuMono}"
                        FontSize="{Binding ElementName=FontSizeSelector, Path=Value, Converter={applib:FontPt2PxConverter}}"
                        Text="{Binding MarkDownText}" />
                </Grid>
            </TabItem>
            <TabItem
                Header="Preview">
                <htmlrenderer:HtmlPanel
                    Text="{Binding RenderedText}" />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
