<mah:MetroWindow
    x:Class="Thingy.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:applib="http://github.com/webmaster442/AppLib/WPF/Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
    xmlns:local="clr-namespace:Thingy"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:simpleChildWindow="clr-namespace:MahApps.Metro.SimpleChildWindow;assembly=MahApps.Metro.SimpleChildWindow"
    xmlns:properties="clr-namespace:Thingy.Properties"
    x:Name="Window"
    Title="Thingy"
    Width="{Binding Source={x:Static properties:Settings.Default}, Path=WindowWidth, Mode=TwoWay}"
    Height="{Binding Source={x:Static properties:Settings.Default}, Path=WindowHeight, Mode=TwoWay}"
    Closing="ModernWindow_Closing"
    Icon="pack://application:,,,/Thingy.Resources;component/Icons/icons8-gift.png"
    Loaded="ModernWindow_Loaded"
    mc:Ignorable="d">
    <mah:MetroWindow.DataContext>
        <local:MainWindowViewModel />
    </mah:MetroWindow.DataContext>
    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <StackPanel
                Orientation="Horizontal">
                <Button
                    Click="OpenMenu">
                    <StackPanel
                        Orientation="Horizontal">
                        <applib:ImageAwesome
                            Width="24"
                            Height="24"
                            Foreground="White"
                            Icon="fa_bars" />
                        <TextBlock
                            Margin="2,0"
                            VerticalAlignment="Center"
                            Text="Menu" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>
    <mah:MetroWindow.Flyouts>
        <mah:FlyoutsControl>
            <mah:Flyout
                x:Name="MenuFlyout"
                Width="{Binding ElementName=TabControl, Path=ActualWidth}"
                Position="Top"
                Theme="Inverse">
                <StackPanel
                    Orientation="Horizontal">
                    <applib:ImageButton
                        Margin="5,0"
                        Command="{Binding SettingCommand}"
                        Content="Settings..."
                        Image="pack://application:,,,/Thingy.Resources;component/Icons/icons8-services-96.png"
                        ImageHeight="28"
                        ImageWidth="28"
                        Style="{StaticResource Flat}" />
                    <applib:ImageButton
                        Margin="5,0"
                        Command="{Binding ExitCommand}"
                        Content="Exit Program"
                        Image="pack://application:,,,/Thingy.Resources;component/Icons/icons8-exit-sign-96.png"
                        ImageHeight="28"
                        ImageWidth="28"
                        Style="{StaticResource Flat}" />
                </StackPanel>
            </mah:Flyout>
        </mah:FlyoutsControl>
    </mah:MetroWindow.Flyouts>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <dragablz:TabablzControl
            x:Name="TabControl"
            Margin="3"
            ClosingItemCallback="{Binding ClosingTabItemHandler}"
            HeaderMemberPath="Header"
            ItemContainerStyle="{StaticResource TrapezoidDragableTabItemStyle}"
            NewItemFactory="{Binding ItemFactory}"
            ShowDefaultAddButton="True"
            ShowDefaultCloseButton="True">
            <dragablz:TabablzControl.HeaderPrefixContent>
                <StackPanel
                    Orientation="Horizontal">
                    <applib:DateTimeTextBlock 
                        FontSize="16"
                        FontWeight="Bold">
                    </applib:DateTimeTextBlock>
                </StackPanel>
            </dragablz:TabablzControl.HeaderPrefixContent>
            <dragablz:TabablzControl.InterTabController>
                <dragablz:InterTabController />
            </dragablz:TabablzControl.InterTabController>
        </dragablz:TabablzControl>
        <local:Statusbar
            Grid.Row="1" />
    </Grid>
</mah:MetroWindow>
