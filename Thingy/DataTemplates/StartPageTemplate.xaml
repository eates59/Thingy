<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Thingy.Controls"
    xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz">

    <DataTemplate x:Key="StartPageTemplate">
        <controls:Tile
            Width="120"
            Height="120"
            Margin="3"
            Background="Orange"
            TileImage="{Binding Icon}"
            TileText="{Binding ModuleName}"
            ClickCommand="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=DataContext.TileClickCommand}">
        </controls:Tile>
    </DataTemplate>

    <DataTemplate DataType="{x:Type dragablz:HeaderedItemViewModel}">
        <ContentControl Content="{Binding Content}" />
    </DataTemplate>

</ResourceDictionary>